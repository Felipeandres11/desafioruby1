<p id="notice"><%= notice %></p>
<h1>Tweets</h1>
<div class="row">
  <div class="col-sm-9">



    <% @tweets.each do |tweet| %>
    <div class="card bg-light py-2  m-auto">
     <div class="row">
        <div class=col-sm-6>
          <%= tweet.content %>
        </div>
        <div class="col-sm-3">
          <%= link_to 'Edit', edit_tweet_path(tweet), class:"btn btn-primary"%>
        </div>
        <div class="col-sm-3">
          <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %>
        </div>
      </div>
     </div>
    <% end %>
  </div>
</div>


<br>

<%= link_to 'New Tweet', new_tweet_path %>
