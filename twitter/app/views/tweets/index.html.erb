<h1>Tweets</h1>



  <div class="row">
    <div class="col-9">
      <table>
        <tr>
          <th> Contenido </th>
          <th> Editar </th>
          <th> Eliminar </th>
        </tr>
      
        <% @tweets.each do |tweet| %>
          
            <tr>
              <td><%= tweet.content %></td>
              <td><%= link_to 'Edit', edit_tweet_path(tweet), class:'btn btn-primary' %></td>
              <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?',}, class:'btn btn-warning' %></td>
            </tr>
        
        
        <% end %>
        </table>
      </div>
    
      

  


